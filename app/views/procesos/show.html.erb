<p>  
  <h1>Proceso: <%= @proceso.nombre %></h1>
</p>
<p>Lider de proceso: <%= @proceso.user.name1.capitalize + " " + @proceso.user.ape1.capitalize %></p>
<p>Objetivo Misional: <%= @proceso.objetivo %></p>

<section>
  <h2>Objetivos Visionales</h2>

  <% if @proceso.objetivos.any? %>
    <ul>
      <% @proceso.objetivos.each do |objetivo| %>
        <li><%= link_to objetivo.objetivoV, objetivo %></li>
      <% end %>
    </ul>
  <% else %>
    <p> No hay Objetivos misionales </p>
  <% end %>
</section>

<section>
  <h3>Registros</h3>  

  <% if @proceso.logpros.any? %>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead class="open">
          <tr>
            <th><a href="#">ENE</a></th>
            <th>FEB</th>
            <th>MAR</th>
            <th>ABR</th>
            <th>MAY</th>
            <th>JUN</th>
            <th>JUL</th>
            <th>AGO</th>
            <th>SEP</th>
            <th>OCT</th>
            <th>NOV</th>
            <th>DIC</th>
          </tr> 
        </thead>
        <tbody>
          <% @proceso.logpros.each do |rp| %>     
          <tr>
            <td><%= link_to rp, rp %></td>  
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% else %>
      <p>no hay registros</p>
    <% end %>
</section>

<div id="popup" style="display: none;">
    <div class="content-popup">
        <div class="close"><a href="#" id="close"></a></div>
        <div>
           <h2>Cuadro general de indicadores</h2>
           <table>
             <thead>
               <th>indicador</th>
             </thead>
             <tbody>
               <tr><td>puntaje</td></tr>
             </tbody>
           </table>
        </div>
    </div>
</div>



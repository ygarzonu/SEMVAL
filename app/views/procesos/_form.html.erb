<div class="row">
  <%= form_for(@proceso) do |f| %>
    <% if @proceso.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@proceso.errors.count, "error") %> evita que este proceso sea guardado:</h2>

        <ul>
        <% @proceso.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-sm-6">
      <section class="containerWaterMark">
        <div class="field">
          <%= f.label :Nombre %><br>
          <%= f.text_field :nombre %>
        </div>
        <div class="field">
          <%= f.label :Importancia %><br>
          <%= f.number_field :importancia %>
        </div>
        <div class="field">
          <%= f.label :Objetivo_Misional %><br>
          <%= f.text_area :objetivo, placeholder:"Verbo Rector en Infinitivo cambiante + Variable + Cuánto + Cómo + Cuándo" %>
        </div>
        <div class="field">
          <%= f.label :Meta %><br>
          <%= f.number_field :meta %>
        </div>
        <div class="field">
          <%= f.label :Fecha_de_Inicio %><br>
          <%= f.date_select :fechaI %>
        </div>
        <div class="field">
          <%= f.label :fecha_de_Corte %><br>
          <%= f.date_select :fechaC %>
        </div>
      </section>
    </div>
    <div class="col-sm-6">
      <section class="containerWaterMark">
       <h1>Objetivos Visionales</h1>
        <%= f.fields_for :objetivos do | objetivo | %>
          <div class="objetivos_fields">
            <div class="fields">
              <%= objetivo.label :ObjetivoV, "Objetivo Visional" %><br>
              <%= objetivo.text_field :ObjetivoV,  placeholder:"Verbo Rector en Infinitivo constante + Producto + Características + Recursos + para + impacto esperado" %>
              <%= objetivo.check_box :_destroy %>
              <%= objetivo.label :_destroy, 'eliminar' %>
            </div>    
          </div>
        <% end %>
      </section>
      
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  <% end %>
</div>